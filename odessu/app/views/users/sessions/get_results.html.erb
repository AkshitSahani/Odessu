<h2> Search results </h2>
<% if !@results[:product_results].empty? %>
  <% @results[:product_results].each do |product| %>
    <div class="search-result">
      <%= product.name%><br>
      <%= image_tag(product.picture_src, height:300, width: 200) %><br>
      Price elsewhere: <%= product.pricebefore %><br>
      Price on Odessu: <%= product.priceafter %>
    </div><br>
  <% end %>
<% else %>
  <h4>There were no products found containing the term "<%= params[:search] %>".</h4>
<% end %>
